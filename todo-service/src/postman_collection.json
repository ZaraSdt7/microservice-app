  },
  "item": [
    {
      "name": "Create Todo",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Learn NestJS\",\n  \"description\": \"Finish todo microservice tutorial\",\n  \"isCompleted\": false\n}"
        },
        "url": { "raw": "http://localhost:3000/todos", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["todos"] }
      },
      "response": []
    },
    {
      "name": "Get All Todos",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/todos?page=1&limit=10&search=NestJS&isCompleted=false",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["todos"],
          "query": [
            { "key": "page", "value": "1" },
            { "key": "limit", "value": "10" },
            { "key": "search", "value": "NestJS" },
            { "key": "isCompleted", "value": "false" }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Get Todo by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/todos/{{todoId}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["todos", "{{todoId}}"]
        }
      },
      "response": []
    },
    {
      "name": "Update Todo",
      "request": {
        "method": "PATCH",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Learn NestJS Advanced\",\n  \"isCompleted\": true\n}"
        },
        "url": {
          "raw": "http://localhost:3000/todos/{{todoId}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["todos", "{{todoId}}"]
        }
      },
      "response": []
    },
    {
      "name": "Delete Todo",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/todos/{{todoId}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["todos", "{{todoId}}"]
        }
      },
      "response": []
    }
  ],
  "variable": [
    { "key": "todoId", "value": "replace_with_actual_id" }
  ]
